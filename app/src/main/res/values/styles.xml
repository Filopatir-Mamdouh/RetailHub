<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTextViewStyle">
        <item name="android:textColor">@color/black_variant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/metropolis</item>
        <item name="android:textAlignment">center</item>

    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="fab_3_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/roundedcorner_background_white</item>
        <item name="android:itemTextAppearance">@style/CustomPopupMenuItemText</item>
    </style>


    <style name="CustomPopupMenuItemText" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textSize">11sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_variant</item>
        <item name="android:fontFamily">@font/metropolis_regular</item>
    </style>

    <style name="BasicTextViewStyleGrey">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="BasicTextViewStyleBlackVarient">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_variant</item>
    </style>


    <style name="OrangeWideButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/metropolis_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/red_color</item>
        <item name="android:radius">10dp</item>
        <item name="elevation">2dp</item>
    </style>


    <style name="CardSubTitleTextStyle">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/metropolis_regular</item>
    </style>

    <style name="CheckBox" parent="">
        <!-- Container colors -->
        <item name="colorOnSurface">@color/transparent</item>
        <item name="colorPrimary">@color/red_color</item>
        <item name="colorError">@color/transparent</item>
        <!-- Icon colors -->
        <item name="colorSurface">@color/transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnError">@color/transparent</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/red_color</item>
        <item name="buttonIconTint">@color/white</item>
    </style>


</resources>